<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CharacterTitleText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CharacterImage">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CharacterOriginText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CharacterDetailTitleText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CharacterDetailSubText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/md_theme_light_secondary</item>
    </style>

    <style name="CharacterDetailLayout">
        <item name="android:background">@drawable/character_background</item>
    </style>


    <dimen name="dimen_16">16dp</dimen>
    <dimen name="dimen_8">8dp</dimen>
</resources>